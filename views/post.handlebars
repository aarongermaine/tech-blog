<div class="post">

    <div class="header">
        <h2>{{post.title}}</h2>
        <div>
            by {{post.User.username}} on {{format_date post.createdAt}}
        </div>
    </div>
    <div class="body">
        {{post.body}}
    </div>


    {{#if post.Comments}}
    <section class="card">

        <div class="card-header">

            <h4>Comments</h4>

        </div>

        <div class="card-body">
            {{#each post.Comments}}
            <div>
                <p>
                    {{body}}
                </p>
                <p>
                    {{User.username}}, {{format_date createdAt}}
                </p>
            </div>
            {{/each}}
        </div>
    </section>
    {{/if}}

    <form id="new-comment-form" class="card">

        <div class="card-header">

            <h4>Add New Comment</h4>

        </div>

        <div class="card-body">
            <input type="hidden" name="post-id" value="{{post.id}}" />

            <label class="form-label" for="comment-body">Comment</label>

            <textarea name="comment-body" class="form-input"></textarea>

            <button type="submit" class="btn">Submit</button>
        </div>
    </form>
</div>

<script src="/js/comments.js"></script>