<div class="post">
    {{#each posts}}

    <div class="body">
        <h2>
            <a href="/posts/{{id}}">{{title}}</a>
        </h2>
        <div>
            <span class="font-italic">
            by {{User.username}} on {{format_date createdAt}}
            </span>
        </div>
    </div>
    <div class="body">
        {{body}}
    </div>

    {{/each}}
</div>